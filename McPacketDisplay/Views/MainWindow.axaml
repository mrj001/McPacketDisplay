<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:McPacketDisplay.ViewModels"
        xmlns:vw="using:McPacketDisplay.Views"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="McPacketDisplay.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="McPacketDisplay">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <DockPanel LastChildFill="True">
      <Menu DockPanel.Dock="Top">
        <MenuItem Header="_File">
          <MenuItem Header="_Open..." Command="{Binding OpenCommand}" />
          <Separator />
          <MenuItem Header="_Quit" />
        </MenuItem>
      </Menu>

      <vw:TcpFilterControl DockPanel.Dock="Top" DataContext="{Binding TcpFilter}">
      </vw:TcpFilterControl>

      <StackPanel DockPanel.Dock="Top">
         <TextBlock>TODO: MineCraft Packet Filters</TextBlock>
      </StackPanel>

      <Border>
        <ListBox>
        </ListBox>
      </Border>
    </DockPanel>
</Window>
